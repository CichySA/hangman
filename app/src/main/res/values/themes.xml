<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hangman" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.NormalButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Theme.CorrectButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/secondary</item>
    </style>

    <style name="Theme.WrongButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/design_default_color_error</item>
    </style>
</resources>